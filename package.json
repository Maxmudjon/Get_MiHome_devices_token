{
  "name": "mi-home-toolkit",
  "version": "1.0.6",
  "description": "A versatile tool for managing Mi Home smart devices, including viewing device information like tokens and enabling LAN mode for bulbs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "win": "electron-builder --win portable",
    "mac": "electron-builder --mac pkg"
  },
  "keywords": [],
  "author": "Dmitrii Kuzmin",
  "license": "ISC",
  "devDependencies": {
    "electron": "^11.4.10",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "materialize-css": "^1.0.0",
    "miio": "^0.15.6",
    "node-mihome": "0.0.30"
  },
  "build": {
    "productName": "Mi Home Toolkit",
    "appId": "apply3d.MiHomeToolkit",
    "copyright": "Copyright Â© 2022 ${author}",
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": null,
      "icon": "assets/icons/mac/icon.icns",
      "category": "apply3d.MiHomeToolkit.app.category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "portable": {
      "artifactName": "MiHomeToolkit.exe"
    },
    "directories": {
      "output": "electron/output",
      "app": "./",
      "buildResources": "electron/buildResources"
    }
  }
}
